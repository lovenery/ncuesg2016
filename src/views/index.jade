extends layout

block stylesheet
  link(rel='stylesheet', href='/css/index.css')
  link(rel='stylesheet', href='/css/modal.css')

block content

  #live.ui.vertical.feature.segment
    .ui.centered.page.grid
      .ten.wide.column
        iframe(width="100%", height="360", src="https://www.youtube.com/embed/Pxgv8GEmYwE?autoplay=1", frameborder="0", allowfullscreen)
      .six.wide.column
        pre.
          
          2017Garena校際盃要與第一屆爐石競技杯要來了!
          歡迎各位的加入!


  .ui.vertical.feature.segment
    .ui.centered.page.grid
      .three.wide.column
      .ten.wide.column
        .ui.statistics
          .ui.transition.hidden.red.statistic
            #lolTeamsCount.value(data-max=lolTeamsCount) 0
            .label 英雄聯盟隊伍
          .ui.transition.hidden.green.statistic
            #hsTeamsCount.value(data-max=hsTeamsCount) 0
            .label 爐石戰記隊伍
          .ui.transition.hidden.blue.statistic           
            #sc2TeamsCount.value(data-max=sc2TeamsCount) 0            
            .label 星海爭霸隊伍 
          .ui.transition.hidden.yellow.statistic
            #avaTeamsCount.value(data-max=avaTeamsCount) 0
            .label A.V.A隊伍
          .ui.transition.hidden.orange.statistic
            #lolsTeamsCount.value(data-max=lolsTeamsCount) 0
            .label 中路單挑選手
          .ui.transition.hidden.statistic
            #userCount.value(data-max=userCount) 0
            .label 已註冊選手
      .three.wide.column
  .ui.vertical.feature.segment(style='min-height:300px;')
    .ui.centered.page.grid
      .fourteen.wide.column
        .ui.two.column.center.aligned.stackable.divided.grid
          .column
            h1.center(style='color: #000;font-family: 微軟正黑體;') 
              i.announcement.icon
              | 重要公告
            table.ui.celled.table
              thead
                tr
                  th 標題
                  th.right.aligned.collapsing 發布時間
              tbody
                each ann in announcement_important
                  tr
                    td
                      a(href='/announcement/'+ann.id)= ann.title
                    td.right.aligned.collapsing= ann.created.getFullYear() + "/" + (ann.created.getMonth()+1) + "/" + ann.created.getDate()
          .column
            h1.center(style='color: #000;font-family: 微軟正黑體;') 
              i.announcement.icon
              | 一般公告
            table.ui.celled.table
              thead
                tr
                  th 標題
                  th.right.aligned.collapsing 發布時間
              tbody
                each ann in announcement_normal
                  tr
                    td
                      a(href='/announcement/'+ann.id)= ann.title
                    td.right.aligned.collapsing= ann.created.getFullYear() + "/" + (ann.created.getMonth()+1) + "/" + ann.created.getDate()

  #sponsors.ui.vertical.feature.segment
    .sponsors.ui.centered.page.grid
      .two.wide.column
        h2.ui.left.aligned.header(style='color: #000;font-family: 微軟正黑體;') 
          | 贊助商：
          p(style='color: grey;font-family: 微軟正黑體;font-size: 6px;').
            (按英文字母排列)
      .fourteen.wide.column
        img(src='/img/logo/acer.png',width='101')
        img(src='/img/logo/acerpredator.png',width='101')
        img(src='/img/logo/ahq.png', width='101')
        img(src='/img/logo/blizzard.png', width='101')
        img(src='/img/logo/esr.png', width='101')
        img(src='/img/logo/Garena.png', width='101')
        img(src='/img/logo/Twitch.png', width='101')

