extends layout

block content
  .container
    h1.ui.center.aligned.header
      i.users.icon
      | 隊伍列表
    .ui.top.attached.tabular.menu
      a.active.item(data-tab='lol') 英雄聯盟
      a.item(data-tab='hs') 爐石戰記：魔獸英雄傳
      a.item(data-tab='sc2') 星海爭霸II：蟲族之心
      a.item(data-tab='ava') AVA戰地之王
    .ui.bottom.attached.active.tab.segment(data-tab='lol')
      table.ui.table
        thead
          tr
            th 隊伍名稱
            th 隊長
        tbody
          each team in lolTeams
            tr
              td
                i.users.icon
                a(href='/team/'+team.id)= team.name
              td
                a(href='/user/'+team.leader.id)= team.leader.local.name
